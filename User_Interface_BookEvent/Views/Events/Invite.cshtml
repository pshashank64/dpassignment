@model NagarroTraining.MVC.DataLayer.EntityModel.Event
@{
    ViewBag.Title = "Invite";
}
<h2 class="alert" style="background-color:#2F4F4F;color:white;text-align:center">Public Events</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EventName)
        </dd>
    </dl>
    <form action="/User/Events/InviteUser" method="post">
        <input type="hidden" name="eventId" value="@ViewBag.eventId" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <select name="userId" multiple>
                    @for (int i = 0; i < ViewBag.userlist.Length; i = i + 2)
                    {
                        <option value="@ViewBag.userlist[i]">@ViewBag.userlist[i + 1]</option>
                    }
                </select>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Invite" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>